{
    
      "manifest_version": 2,
      "name": "Firefox Search Popup Plugin",
      "version": "1.0",
    
      "description": "Reproduce functionality of the popup Opera search/copy menu in Firefox",
    
      "icons": {
        "48": "icons/border-48.png"
      }
      ,
    
      "content_scripts": [
        {
          "matches": ["*://*.mozilla.org/*"],
          "js": ["selector.js"]
        }
      ]
    
    }